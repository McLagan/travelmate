# TravelMate Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME=TravelMate API
VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8088

# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/travelmate_dev

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-change-in-production-use-32-chars-minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# CORS - Update for production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
ALLOWED_CREDENTIALS=true

# External APIs
OPENSTREETMAP_URL=https://nominatim.openstreetmap.org
OSRM_URL=https://router.project-osrm.org

# Rate Limiting (requests per minute)
RATE_LIMIT_SEARCH=20
RATE_LIMIT_ROUTES=30
RATE_LIMIT_AUTH=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: Production settings
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=your-sentry-dsn
# EMAIL_BACKEND=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email
# EMAIL_PASSWORD=your-password